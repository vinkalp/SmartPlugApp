<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartplugapp.enable_disable.Enable_Disable">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Switch
                android:paddingTop="30dp"
                android:id="@+id/manual_id_ON_OFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manual ON/OFF"
                android:textColor="#000000"
                android:textStyle="italic|bold"
                android:textSize="20dp"
                />

            <Switch
                android:paddingTop="30dp"
                android:id="@+id/batery_id_ON_OFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Battery ON/OFF"
                android:textColor="#000000"
                android:textStyle="italic|bold"
                android:textSize="20dp"
                />
            <Switch
                android:paddingTop="30dp"
                android:id="@+id/cloud_id_ON_OFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cloud ON/OFF"
                android:textColor="#000000"
                android:textStyle="italic|bold"
                android:textSize="20dp"
                />
            <!--  <Switch
                  android:paddingTop="30dp"
                  android:id="@+id/timer_id_ON_OFF"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Timer ON/OFF"
                  android:textColor="#000000"
                  android:textStyle="italic|bold"
                  android:textSize="20dp"
                  />-->

            <Button

                android:id="@+id/setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Setting"
                android:textColor="#000000"
                android:textStyle="italic|bold"
                android:textSize="20dp"/>


        </LinearLayout>




    </ScrollView>
</android.support.constraint.ConstraintLayout>
